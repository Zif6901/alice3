      transition: all 0.3s ease;
      outline: none;
    }

    #voice-trigger-btn:hover {
      transform: scale(1.1);
    }

    /* STATE: HEARING / ACTIVE (Red) - Listening for Command */
    #voice-trigger-btn.hearing {
      background-color: #EA4335 !important;
      box-shadow: 0 0 15px #EA4335;
      animation: pulse-red 1s infinite;
    }

    /* STATE: SPEAKING/BUSY (Yellow) - Tap the MIC to Interrupt */
    #voice-trigger-btn.speaking {
      background-color: #FBBC05 !important;
      animation: none;
      box-shadow: 0 0 10px #FBBC05;
      cursor: cell; /* visual cue that you can click to stop */
    }

    /* Mute Button */
    #mute-btn {
      position: fixed;
      bottom: 25px;       
      right: 150px;       
